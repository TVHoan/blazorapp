@code{
    public string currentCate { get; set; }
    public string IsCurrentCate(string nameCate)
    {
        return currentCate == nameCate ? "active" : "";
    }
    public void SetCate(string nameCate)
    {
        currentCate = nameCate;
    }
    protected override Task OnInitializedAsync()
